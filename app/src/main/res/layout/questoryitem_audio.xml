<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/fragmentAudioId"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/questepBackgroundColor"
  tools:context="com.questroll.ui.questories.QuestoryAudioItemFragment">


  <ak.sh.ay.musicwave.MusicWave
    android:id="@+id/musicWave"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@color/questepBackgroundColor"
    app:colorGradient="true"
    app:endColor="@color/colorEndLine"
    app:startColor="@color/colorStarLine"
    app:waveThickness="3"/>

  <ImageButton
    android:id="@+id/audioMediaButton"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_centerInParent="true"
    android:background="@android:color/transparent"
    android:visibility="invisible"/>

  <View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_above="@+id/questAddButtonOnAudioView"
    android:layout_alignParentStart="true"
    android:background="@android:color/white"/>

  <ImageButton
    android:id="@+id/questAddButtonOnAudioView"
    android:layout_width="50dp"
    android:layout_height="45dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_add_25"/>

  <ImageButton
    android:id="@+id/questUserButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="14dp"
    android:layout_alignParentEnd="true"
    android:layout_alignTop="@+id/searchButtonOnAudioView"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_user_25"/>

  <ImageButton
    android:id="@+id/searchButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="80dp"
    android:layout_alignParentStart="true"
    android:layout_alignTop="@+id/homeButtonOnAudioView"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_searcher_25"/>

  <ImageButton
    android:id="@+id/questoryOwnerButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="185dp"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/questUserButtonOnAudioView"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_account_25"/>

  <ImageButton
    android:id="@+id/questoryShareButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="129dp"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/questUserButtonOnAudioView"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_share_white_25"/>

  <ImageButton
    android:id="@+id/homeButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="13dp"
    android:layout_alignParentStart="true"
    android:layout_alignTop="@+id/notificationsButtonOnAudioView"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_home_25"/>

  <ImageButton
    android:id="@+id/notificationsButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginEnd="89dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_notification_25"/>

  <ImageButton
    android:id="@+id/questepCommentsButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="74dp"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/questUserButtonOnAudioView"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_chat_25"/>

  <ImageButton
    android:id="@+id/questepLikeButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="171dp"
    android:layout_alignParentBottom="true"
    android:layout_alignStart="@+id/questUserButtonOnAudioView"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_favorite_heart_button_25"/>

  <ImageButton
    android:id="@+id/questoryEnrollButtonOnAudioView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignStart="@+id/questUserButtonOnAudioView"
    android:layout_centerVertical="true"
    android:background="@android:color/transparent"
    android:src="@drawable/ic_question_mark_25"/>


</RelativeLayout>
